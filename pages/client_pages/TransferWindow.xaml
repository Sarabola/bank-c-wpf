<Window x:Class="BankWPFApp.pages.client_pages.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перевод средств" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
            <TextBlock Text="Перевод средств" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Назад" Width="80" Height="25" Margin="10,0,0,0" Click="BackButton_Click"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Сумма:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="AmountTextBox" Width="150"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Телефон получателя:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="PhoneTextBox" Width="150"/>
            <Button Content="Перевести" Margin="10,0,0,0" Click="TransferByPhone_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Карта получателя:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="CardTextBox" Width="150"/>
            <Button Content="Перевести" Margin="10,0,0,0" Click="TransferByCard_Click"/>
        </StackPanel>

        <TextBlock x:Name="InfoTextBlock" Grid.Row="4" Margin="0,10,0,0" Foreground="Green" TextWrapping="Wrap"/>
    </Grid>
</Window>
