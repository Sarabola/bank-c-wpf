<Window x:Class="BankWPFApp.pages.client_pages.TransactionsHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История транзакций" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="История транзакций" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button x:Name="LogoutButton" Content="Выход" Width="100" Height="30" Margin="20,0,0,0" Click="LogoutButton_Click"/>
        </StackPanel>


        <DataGrid x:Name="TransactionsDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Сумма" Binding="{Binding AmountDisplay}" Width="100"/>
                <DataGridTextColumn Header="Отправитель" Binding="{Binding FromUser}" Width="150"/>
                <DataGridTextColumn Header="Получатель" Binding="{Binding ToUser}" Width="150"/>
                <DataGridTextColumn Header="Время" Binding="{Binding Transaction_time}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
