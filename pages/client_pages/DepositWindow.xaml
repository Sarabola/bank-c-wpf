<Window x:Class="BankWPFApp.pages.client_pages.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пополнение счета" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Text="Сумма для депозита:" FontSize="14" VerticalAlignment="Center" Height="19"/>

        <TextBox x:Name="AmountTextBox" Grid.Row="1" Margin="0,5,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,5" Width="210">
            <Button x:Name="DepositButton" Content="Пополнить" Width="100" Height="30" Click="DepositButton_Click"/>
            <Button x:Name="LogoutButton" Content="Выход" Width="100" Height="30" Margin="10,0,0,0" Click="LogoutButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="InfoTextBlock" Grid.Row="3" VerticalAlignment="Top" Foreground="Green" Height="16"/>
    </Grid>
</Window>
