<Window x:Class="BankWPFApp.pages.client_pages.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль пользователя" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Профиль пользователя" FontSize="16" FontWeight="Bold"/>
            <Button Content="Назад" Width="80" Height="25" Margin="10,0,0,0" Click="BackButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Логин:" Width="120"/>
            <TextBlock x:Name="UsernameTextBlock"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Роль:" Width="120"/>
            <TextBlock x:Name="RoleTextBlock"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Телефон:" Width="120"/>
            <TextBox x:Name="PhoneTextBox" Width="150"/>
            <Button Content="Сохранить" Margin="10,0,0,0" Click="SavePhoneButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Номер карты:" Width="120"/>
            <TextBlock x:Name="CardTextBlock"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,15,0,0">
            <Button Content="Персональные данные" Width="200" Height="30" Click="PersonalData_Click"/>
        </StackPanel>
    </Grid>
</Window>
