<Window x:Class="BankWPFApp.pages.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guest Window" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Добро пожаловать, Гость!" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Вы можете:" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ListBox>
                <ListBoxItem MouseDoubleClick="OpenCurrency_Click">Просмотр курсов валют</ListBoxItem>
                <ListBoxItem MouseDoubleClick="OpenServices_Click">Просмотр услуг банка</ListBoxItem>
                <ListBoxItem MouseDoubleClick="OpenLogin_Click">Войти в аккаунт</ListBoxItem>
                <ListBoxItem MouseDoubleClick="OpenRegister_Click">Регистрация нового клиента</ListBoxItem>
            </ListBox>

            <Button Content="Выйти" Width="80" Margin="0,20,0,0" HorizontalAlignment="Left" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
