<Window x:Class="BankWPFApp.pages.admin_pages.TransactionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Транзакции" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <DataGrid x:Name="TransactionsDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TransactionID}" Width="50"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding TransactionType}" Width="100"/>
                <DataGridTextColumn Header="Отправитель" Binding="{Binding FromUser}" Width="150"/>
                <DataGridTextColumn Header="Получатель" Binding="{Binding ToUser}" Width="150"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}" Width="100"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Transaction_time}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
