<Window x:Class="BankWPFApp.pages.admin_pages.SQLQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Query" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SqlQueryTextBox" Height="120" TextWrapping="Wrap" AcceptsReturn="True" FontFamily="Consolas" FontSize="14"/>

        <DataGrid x:Name="SqlResultDataGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Margin="0,10,0,10"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Выполнить" Width="100" Margin="0,0,10,0" Click="ExecuteSqlButton_Click"/>
            <Button Content="Очистить" Width="100" Click="ClearSqlButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
