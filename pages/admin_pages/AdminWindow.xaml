<Window x:Class="BankWPFApp.pages.admin_pages.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Window" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Добро пожаловать, Администратор!" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Администрирование:" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ListBox>
                <ListBoxItem MouseDoubleClick="ShowAllUsers_Click">Список клиентов банка</ListBoxItem>
                <ListBoxItem MouseDoubleClick="ShowAllTransactions_Click">Просмотр всех транзакций</ListBoxItem>
                <ListBoxItem MouseDoubleClick="ShowTransactionsById_Click">Просмотр транзакций конкретного клиента</ListBoxItem>
                <ListBoxItem MouseDoubleClick="BanUser_Click">Блокировка клиента</ListBoxItem>
                <ListBoxItem MouseDoubleClick="SQLQuery_Click">Доступ к SQL</ListBoxItem>
            </ListBox>

            <Button Content="Выйти" Width="80" Margin="0,20,0,0" HorizontalAlignment="Left" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
